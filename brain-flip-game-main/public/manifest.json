{
  "name": "Brain Flip - The Opposite Game",
  "short_name": "Brain Flip",
  "description": "Challenge your mind with the most addictive reverse psychology puzzle game ever created. Think backwards, react quickly, and master the opposite!",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0a0a0f",
  "theme_color": "#00ff41",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "categories": ["games", "puzzle", "brain-training", "entertainment"],
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshots/gameplay-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Gameplay on mobile device"
    },
    {
      "src": "/images/screenshots/menu-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Main menu on desktop"
    }
  ],
  "shortcuts": [
    {
      "name": "Play Classic Mode",
      "short_name": "Classic",
      "description": "Start a classic game session",
      "url": "/game?mode=classic",
      "icons": [
        {
          "src": "/images/icons/classic-mode.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Play Duel Mode",
      "short_name": "Duel",
      "description": "Start a fast-paced duel",
      "url": "/game?mode=duel",
      "icons": [
        {
          "src": "/images/icons/duel-mode.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Leaderboard",
      "short_name": "Leaderboard",
      "description": "Check your ranking",
      "url": "/leaderboard",
      "icons": [
        {
          "src": "/images/icons/leaderboard.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+brainflip",
      "url": "/game?mode=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/game",
      "accept": {
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications",
    "vibrate"
  ],
  "background": {
    "service_worker": "/sw.js",
    "type": "module"
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "window_controls_overlay": {
    "title_bar_area": {
      "x": 0,
      "y": 0,
      "width": 400,
      "height": 40
    }
  }
}
